<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zb.mapper.ZhUserMapper">

    <select id="getZhUserById" resultType="com.zb.pojo.ZhUser">
        select
                id as id,
                userName as userName,
                phone as phone,
                password as password,
                wxUserId as wxUserId,
                createtime as createtime,
                fullName as fullName,
                idNumber as idNumber,
                idPositive as idPositive,
                idBack as idBack,
                examineState as examineState
        from zh_user
        <trim prefix="where" prefixOverrides="and | or">
            <if test="id != null">
                and id=#{id}
            </if>
        </trim>
    </select>

    <select id="getZhUserListByMap" resultType="com.zb.pojo.ZhUser" parameterType="java.util.Map">
        select
                id as id,
                userName as userName,
                phone as phone,
                password as password,
                wxUserId as wxUserId,
                createtime as createtime,
                fullName as fullName,
                idNumber as idNumber,
                idPositive as idPositive,
                idBack as idBack,
                examineState as examineState
        from zh_user
        <trim prefix="where" prefixOverrides="and | or">
                <if test="id != null and id!=''">
                    and id=#{id}
                </if>
                <if test="userName != null and userName!=''">
                    and userName=#{userName}
                </if>
                <if test="phone != null and phone!=''">
                    and phone=#{phone}
                </if>
                <if test="password != null and password!=''">
                    and password=#{password}
                </if>
                <if test="wxUserId != null and wxUserId!=''">
                    and wxUserId=#{wxUserId}
                </if>
                <if test="createtime != null and createtime!=''">
                    and createtime=#{createtime}
                </if>
                <if test="fullName != null and fullName!=''">
                    and fullName=#{fullName}
                </if>
                <if test="idNumber != null and idNumber!=''">
                    and idNumber=#{idNumber}
                </if>
                <if test="idPositive != null and idPositive!=''">
                    and idPositive=#{idPositive}
                </if>
                <if test="idBack != null and idBack!=''">
                    and idBack=#{idBack}
                </if>
                <if test="examineState != null and examineState!=''">
                    and examineState=#{examineState}
                </if>
        </trim>
        <if test="beginPos != null and pageSize != null ">
            limit #{beginPos},#{pageSize}
        </if>
    </select>

    <select id="getZhUserCountByMap" resultType="Integer"  parameterType="java.util.Map">
        select count(*) from zh_user
        <trim prefix="where" prefixOverrides="and | or">
                <if test="id != null and id!=''">
                    and id=#{id}
                </if>
                <if test="userName != null and userName!=''">
                    and userName=#{userName}
                </if>
                <if test="phone != null and phone!=''">
                    and phone=#{phone}
                </if>
                <if test="password != null and password!=''">
                    and password=#{password}
                </if>
                <if test="wxUserId != null and wxUserId!=''">
                    and wxUserId=#{wxUserId}
                </if>
                <if test="createtime != null and createtime!=''">
                    and createtime=#{createtime}
                </if>
                <if test="fullName != null and fullName!=''">
                    and fullName=#{fullName}
                </if>
                <if test="idNumber != null and idNumber!=''">
                    and idNumber=#{idNumber}
                </if>
                <if test="idPositive != null and idPositive!=''">
                    and idPositive=#{idPositive}
                </if>
                <if test="idBack != null and idBack!=''">
                    and idBack=#{idBack}
                </if>
                <if test="examineState != null and examineState!=''">
                    and examineState=#{examineState}
                </if>
        </trim>
    </select>

    <insert id="insertZhUser" parameterType="com.zb.pojo.ZhUser">
        insert into zh_user(
                        userName,
                        phone,
                        password,
                        wxUserId,
                        createtime,
                        fullName,
                        idNumber,
                        idPositive,
                        idBack,
                        examineState)
        values(
                     #{userName},
                     #{phone},
                     #{password},
                     #{wxUserId},
                     #{createtime},
                     #{fullName},
                     #{idNumber},
                     #{idPositive},
                     #{idBack},
                    #{examineState})
    </insert>

    <update id="updateZhUser" parameterType="com.zb.pojo.ZhUser">
        update zh_user
        <trim prefix="set" suffixOverrides="," suffix="where id=#{id}">
                        <if test="userName != null and userName!=''">
                            userName=#{userName},
                        </if>
                        <if test="phone != null and phone!=''">
                            phone=#{phone},
                        </if>
                        <if test="password != null and password!=''">
                            password=#{password},
                        </if>
                        <if test="wxUserId != null and wxUserId!=''">
                            wxUserId=#{wxUserId},
                        </if>
                        <if test="createtime != null and createtime!=''">
                            createtime=#{createtime},
                        </if>
                        <if test="fullName != null and fullName!=''">
                            fullName=#{fullName},
                        </if>
                        <if test="idNumber != null and idNumber!=''">
                            idNumber=#{idNumber},
                        </if>
                        <if test="idPositive != null and idPositive!=''">
                            idPositive=#{idPositive},
                        </if>
                        <if test="idBack != null and idBack!=''">
                            idBack=#{idBack},
                        </if>
                        <if test="examineState != null and examineState!=''">
                            examineState=#{examineState}
                        </if>
        </trim>
    </update>
</mapper>